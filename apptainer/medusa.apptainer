Bootstrap: localimage
From: images/julia:latest.sif

%files
    ../requirements.txt requirements.txt
    ../julia_requirements.jl julia_requirements.jl

%post
    apt update
    apt-get -y install python3 git
    apt install python3-pip -y
    pip3 install --break-system-packages -r requirements.txt
    pip3 install --break-system-packages qualtran==0.3.0
    julia julia_requirements.jl

%runscript
    julia --project="/opt/." "/opt/src/cli.jl" "$@"
